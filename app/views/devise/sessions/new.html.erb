<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5 mt-3 p-3" style="background-color: #F6F6F6;">
      <h2 class="text-center">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <% if flash[:alert] %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <!--<strong>Holy guacamole!</strong>--><%= flash[:alert] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% end %>

        <div class="">
          <%= f.label :email %>:<br />
          <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: 'form-control form-control-sm' %>
        </div>

        <div class="mt-3">
          <%= f.label :password %>:<br />
          <%= f.password_field :password, required: true, autocomplete: "current-password", class: 'form-control form-control-sm' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mt-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mt-3 text-center">
          <%= f.button "<i class='fas fa-sign-in-alt' aria-hidden='true'></i> Log in".html_safe, class: 'btn btn-primary btn-sm' %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
